datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model ChatRoom {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  npcs      Npc[]
  updatedAt DateTime @updatedAt
}

model ButtonResponse {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Role {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Image {
  createdAt   DateTime @default(now())
  description String?
  generatedBy String?
  id          String   @id @default(cuid())
  updatedAt   DateTime @updatedAt
  url         String?
}

model Settings {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  key       String?
  updatedAt DateTime @updatedAt
  value     Json?
}

model Npc {
  chatRoom    ChatRoom? @relation(fields: [chatRoomId], references: [id])
  chatRoomId  String?
  createdAt   DateTime  @default(now())
  description String?
  id          String    @id @default(cuid())
  name        String?
  updatedAt   DateTime  @updatedAt
}
